{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.ts)",
        "hooks": [
          { "type": "command", "command": "npx prettier --write $file 2>/dev/null || true" }
        ]
      },
      {
        "matcher": "Write(*.tsx)",
        "hooks": [
          { "type": "command", "command": "npx prettier --write $file 2>/dev/null || true" }
        ]
      },
      {
        "matcher": "Write(*.cs)",
        "hooks": [
          { "type": "command", "command": "dotnet format --include $file 2>/dev/null || true" }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "command", "command": "cd apps/web && npx tsc --noEmit 2>/dev/null || true" }
        ]
      }
    ]
  }
}
